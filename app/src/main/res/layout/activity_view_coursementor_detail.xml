<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_padding"
        tools:context=".ViewTermDetailsActivity">

        <TextView
            android:id="@+id/tvViewMentorNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/name_label"/>

        <TextView
            android:id="@+id/tvViewMentorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/view_detail_indent"
            android:layout_marginStart="@dimen/view_detail_indent"
            android:text="@string/default_mentor_name"
            android:layout_below="@+id/tvViewMentorNameLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/normal_text"/>

        <View
            android:id="@+id/hr1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:layout_below="@id/tvViewMentorName"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvViewCourseMentorPhonesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/hr1"
            android:text="@string/phone_numbers_label"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvViewMentorWorkPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/work_label"
            android:layout_below="@+id/tvViewCourseMentorPhonesLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvViewMentorWorkPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_phone_number"
            android:textSize="@dimen/normal_text"
            android:layout_alignTop="@+id/tvViewMentorWorkPhoneLabel"
            android:layout_toRightOf="@+id/tvViewMentorHomePhoneLabel"
            android:layout_toEndOf="@+id/tvViewMentorHomePhoneLabel"/>

        <TextView
            android:id="@+id/tvViewMentorHomePhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/home_label"
            android:layout_below="@+id/tvViewMentorWorkPhone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/tvViewMentorHomePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_phone_number"
            android:textSize="@dimen/normal_text"
            android:layout_alignTop="@+id/tvViewMentorHomePhoneLabel"
            android:layout_alignLeft="@+id/tvViewMentorWorkPhone"
            android:layout_alignStart="@+id/tvViewMentorWorkPhone"/>

        <TextView
            android:id="@+id/tvViewMentorCellPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/cell_label"
            android:layout_below="@+id/tvViewMentorHomePhone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvViewMentorCellPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_phone_number"
            android:textSize="@dimen/normal_text"
            android:layout_alignTop="@+id/tvViewMentorCellPhoneLabel"
            android:layout_alignLeft="@+id/tvViewMentorHomePhone"
            android:layout_alignStart="@+id/tvViewMentorHomePhone"/>

        <View
            android:id="@+id/hr2"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:layout_below="@id/tvViewMentorCellPhone"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvViewCourseMentorEmailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/hr2"
            android:text="@string/email_addresses_label"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvViewMentorWorkEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/work_label"
            android:layout_below="@+id/tvViewCourseMentorEmailLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvViewMentorWorkEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/view_detail_indent"
            android:layout_marginStart="@dimen/view_detail_indent"
            android:text="@string/default_text_email"
            android:textSize="@dimen/normal_text"
            android:layout_below="@+id/tvViewMentorWorkEmailLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvViewMentorHomeEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/home_label"
            android:layout_below="@+id/tvViewMentorWorkEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvViewMentorHomeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/view_detail_indent"
            android:layout_marginStart="@dimen/view_detail_indent"
            android:text="@string/default_text_email"
            android:textSize="@dimen/normal_text"
            android:layout_below="@+id/tvViewMentorHomeEmailLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvViewMentorOtherEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/other_label"
            android:layout_below="@+id/tvViewMentorHomeEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvViewMentorOtherEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/view_detail_indent"
            android:layout_marginStart="@dimen/view_detail_indent"
            android:text="@string/default_text_email"
            android:textSize="@dimen/normal_text"
            android:layout_below="@+id/tvViewMentorOtherEmailLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
</ScrollView>